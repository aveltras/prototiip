<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Prototiip</title>
  <link rel="stylesheet" href="app.css">
  <style>
    .prototiip-mode-selector.prototiip-selected {
      font-weight: 700;
    }

    @media screen and (max-width: 640px) {
      #prototiip-selector-ctr {
        left: 10%;
        width: 80%;
      }

      #prototiip-view-selector {
        display: block;
        margin: 0 auto;
      }

      .prototiip-mode-selector {
        display: block;
        margin: 5px auto;
      }
    }

    @media screen and (min-width: 640px) {
      #prototiip-selector-ctr {
        left: 20%;
        width: 60%;
      }
    }

    #prototiip-selector-ctr {
      position: fixed;
      bottom: 0;
      padding: 5px;
      border-radius: 5px;
      margin-bottom: 15px;
      background-color: #eee;
      border: 2px solid #bbb;
    }
  </style>
</head>

<body>
  {{{body}}}
  {{> view-selector}}
  <script>
    document.addEventListener("DOMContentLoaded", function () {

      document.getElementById("prototiip-view-selector").addEventListener("change", function () {
        window.location.href = this.value;
      }, false);

      document.addEventListener("click", function (event) {
        if (typeof event.target.dataset.prototiipMode !== "undefined") {
          if (location.search !== event.target.dataset.prototiipMode) {
            location.search = event.target.dataset.prototiipMode;
          }
        }
      }, false);

    });
  </script>
  <script src="app.js"></script>
</body>

</html>